              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json() || {};",
                  "pm.test('status is 200', () => pm.response.to.have.status(200));",
                  "const cc = (pm.response.headers.get('Cache-Control') || '').toLowerCase();",
                  "pm.test('cache-control is no-store', () => pm.expect(cc).to.include('no-store'));",
                  "const vary = pm.response.headers.get('Vary') || '';",
                  "pm.test('vary includes Authorization or Cookie', () => pm.expect(/Authorization|Cookie/i.test(vary)).to.eql(true));",
                  "const questions = (json.data && json.data.questions) || [];",
                  "const target = questions.find(q => String(q.id) === String(pm.environment.get('question_id')));",
                  "pm.test('question present on paper', () => pm.expect(target, 'question missing from paper').to.exist);",
                  "if (target && target.choices && target.choices.length && !pm.environment.get('choice_id_A')) {",
                  "  pm.environment.set('choice_id_A', target.choices[0].id);",
                  "}",
                  "pm.test('selected choice initially empty', () => pm.expect(target.selected_choice_id, 'expected empty selection').to.satisfy(val => val === null || val === undefined));"
                ],
                "type": "text/javascript"
              }
